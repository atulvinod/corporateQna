                    <div class="mb-5">
                        <img src="~/img/logo.svg" class="logo"/>
                        <h3 class="mt-3 text-white">Corporate Q&A Platform</h3>
                    </div>
                </div>
                <div class="col-5">
                    @RenderBody()
                </div>
            </div>
        </div>
   
       
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
