@model RegisterModel;
<h1>Register</h1>
<hr />
<form asp-controller="Auth" asp-action="Register" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <label>Username</label><label asp-validation-for="Username"> </label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label><label asp-validation-for="Email"> </label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Department</label><label asp-validation-for="Department"> </label>
        <input type="text" class="form-control" asp-for="Department" />
    </div>
    <div class="form-group">
        <label>Location</label><label asp-validation-for="Location"> </label>
        <input type="text" class="form-control" asp-for="Location" />
    </div>
    <div class="form-group">
        <label>Password</label><label asp-validation-for="Password"> </label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Confirm Password</label><label asp-validation-for="ConfirmPassword"> </label>
        <input type="password" asp-for="ConfirmPassword" class="form-control" />
    </div>
    <div class="mt-1">
        <input type="submit" value="Register" class="btn btn-primary" />
    </div>
</form>