@model RegisterModel;

<div class="p-4">
    <h1>Register</h1>
    <hr />
    <form asp-controller="Auth" asp-action="Register" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group">
            <label>Username</label><span asp-validation-for="Username" class="text-danger ml-2"></span>
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="form-group">
            <label>Email</label><span asp-validation-for="Email" class="text-danger ml-2"></span>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label> Position</label><span asp-validation-for="Position" class="text-danger ml-2"></span>
            <input asp-for="Position" class="form-control" />
        </div>
        <div class="form-group">
            <label> Location</label><span asp-validation-for="Location" class="text-danger ml-2"></span>
            <input asp-for="Location" class="form-control" />
        </div>
        <div class="form-group">
            <label> Department</label><span asp-validation-for="Department" class="text-danger ml-2"></span>
            <input asp-for="Department" class="form-control" />
        </div>
        <div class="form-group">
            <label>Password</label><span asp-validation-for="Password" class="text-danger ml-2"></span>
            <input type="password" asp-for="Password" class="form-control" />
        </div>
        <div class="form-group">
            <label>Confirm Password</label><span asp-validation-for="ConfirmPassword" class="text-danger ml-2"></span>
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
        </div>

        @if (ViewBag.Errors != null)
        {
            <ul class="mt-1">
                @foreach (var i in ViewBag.Errors)
                {
                    <li class="text-danger">@i</li>
                }
            </ul>
        }

        <div class="mt-1">
            <input type="submit" value="Register" class="btn btn-success" />
        </div>

    </form>
</div>

